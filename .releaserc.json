{
  "branches": [
    "main",
    "master"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix", 
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "style",
            "release": "patch"
          },
          {
            "type": "revert",
            "release": "patch"
          },
          {
            "type": "security",
            "release": "patch"
          },
          {
            "type": "deps",
            "release": "patch"
          },
          {
            "type": "improvement",
            "release": "patch"
          },
          {
            "type": "build",
            "release": "patch"
          },
          {
            "type": "breaking",
            "release": "major"
          },
          {
            "breaking": true,
            "release": "major"
          },
          {
            "type": "docs",
            "release": "patch"
          },
          {
            "type": "chore",
            "release": "patch"
          },
          {
            "type": "test",
            "release": false
          },
          {
            "type": "ci",
            "release": false
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "🚀 新功能"
            },
            {
              "type": "fix",
              "section": "🐛 修复"
            },
            {
              "type": "perf",
              "section": "⚡ 性能优化"
            },
            {
              "type": "refactor",
              "section": "♻️ 重构"
            },
            {
              "type": "style",
              "section": "💄 代码格式"
            },
            {
              "type": "security",
              "section": "🔒 安全修复"
            },
            {
              "type": "deps",
              "section": "⬆️ 依赖更新"
            },
            {
              "type": "improvement",
              "section": "✨ 改进"
            },
            {
              "type": "build",
              "section": "📦 构建优化"
            },
            {
              "type": "revert",
              "section": "⏪ 撤销更改"
            },
            {
              "type": "breaking",
              "section": "💥 重大变更"
            },
            {
              "type": "docs",
              "section": "📚 文档更新"
            },
            {
              "type": "chore",
              "section": "🔧 日常维护"
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          "CHANGELOG.md",
          "Dockerfile", 
          "package.json",
          "multi-java-*.tar.gz"
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
{
  "branches": [
    "main",
    "master"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix", 
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "build",
            "release": "patch"
          },
          {
            "type": "docs",
            "release": false
          },
          {
            "type": "chore",
            "release": false
          },
          {
            "type": "test",
            "release": false
          },
          {
            "type": "ci",
            "release": false
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "🚀 新功能"
            },
            {
              "type": "fix",
              "section": "🐛 修复"
            },
            {
              "type": "perf",
              "section": "⚡ 性能优化"
            },
            {
              "type": "build",
              "section": "📦 构建优化"
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "CHANGELOG.md",
            "label": "Changelog",
            "name": "CHANGELOG.md"
          },
          {
            "path": "Dockerfile",
            "label": "Dockerfile - 多版本Java容器构建文件", 
            "name": "Dockerfile"
          },
          {
            "path": "package.json",
            "label": "Package Configuration",
            "name": "package.json"
          },
          {
            "path": "multi-java-${nextRelease.version}-amd64.tar.gz",
            "label": "Docker镜像压缩包 - 离线安装使用",
            "name": "multi-java-${nextRelease.version}-amd64.tar.gz"
          }
        ],
        "releaseNotesFile": "RELEASE_NOTES.md",
        "discussionCategoryName": "Announcements"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}